<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="180.0" prefWidth="312.0" style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" layoutX="3.0" prefHeight="151.0" prefWidth="306.0">
         <children>
            <Label fx:id="lblTitle" alignment="CENTER" prefHeight="38.0" prefWidth="306.0" text="Title" />
            <Label fx:id="lblCost" alignment="CENTER" prefHeight="37.0" prefWidth="306.0" text="Cost" />
            <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="250.0" spacing="20.0">
               <children>
                  <Button fx:id="btnPlay" alignment="CENTER" mnemonicParsing="false" onAction="#btnPlayClicked" prefHeight="50.0" prefWidth="305.0" text="Play" />
                  <Button fx:id="btnAddToCart" mnemonicParsing="false" onAction="#btnAddToCartClicked" prefHeight="50.0" prefWidth="305.0" text="Add to Cart" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
